{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../proto/*.proto",
        "outDir": "./dist/proto"
      },
      {
        "include": "./mailer/templates/*.hbs",
        "outDir": "./dist/src"
      }
    ],
    "watchAssets": true
  }
}
